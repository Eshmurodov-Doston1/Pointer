<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container"
    android:layout_height="match_parent"
    android:background="#F7F7FC"
    android:theme="@style/theme_style"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:navGraph="@navigation/main_navigation" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_subtract"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.12"
        tools:layout_editor_absoluteX="0dp" />

    <at.markushi.ui.CircleButton
        android:id="@+id/main_menu_btn"
        android:transitionName="cardView"
        app:cb_pressedRingWidth="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="@dimen/_2sdp"
        app:cb_color="#01D8D0"
        android:src="@drawable/ic_group_4"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_chat"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toTopOf="@id/line"
        app:layout_constraintBottom_toBottomOf="@id/line"
        app:layout_constraintLeft_toLeftOf="@id/line"
        app:layout_constraintRight_toRightOf="@id/line"
        app:cardCornerRadius="@dimen/_15sdp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        app:cardElevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                app:layout_constraintTop_toTopOf="@id/image1"
               app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/image1"
                app:layout_constraintBottom_toBottomOf="@id/image1"
                android:text="Chat"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:paddingRight="@dimen/_7sdp"
                android:textStyle="normal"
                android:textSize="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/image1"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:src="@drawable/ic_chat_2_2"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_price"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintTop_toTopOf="@id/line"
        app:layout_constraintBottom_toBottomOf="@id/line"
        app:layout_constraintLeft_toLeftOf="@id/line"
        app:layout_constraintRight_toRightOf="@id/line"
        app:cardCornerRadius="@dimen/_15sdp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        app:cardElevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image"
                android:paddingLeft="@dimen/_3sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:src="@drawable/ic_dollar_2_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                app:layout_constraintTop_toTopOf="@id/image"
                app:layout_constraintLeft_toRightOf="@id/image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/image"
                android:text="To'lov"
                android:textColor="@color/black"
                android:paddingRight="@dimen/_7sdp"
                android:textStyle="normal"
                android:textSize="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F9"
    android:transitionName="my_calendar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.lessontable.CalendarFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#F7F7FC"
        android:transitionName="cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/cl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#F4F7FC"
            app:layout_constraintVertical_bias="0"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/back"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/vector"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>

            <TextView

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/back"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="@dimen/_20sdp"
                android:textColor="#373737"
                android:fontFamily="@font/montserrat"
                android:text="Dars jadvali"
                android:textSize="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView

        android:id="@+id/card"
        app:layout_constraintTop_toBottomOf="@id/cl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="330dp">

            <CalendarView
                android:id="@+id/calendar"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <TextView

            android:id="@+id/davomat"
            app:layout_constraintTop_toBottomOf="@id/card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.2"
            android:textSize="@dimen/_20sdp"
            app:flow_firstVerticalBias="0.2"
            android:textColor="@color/secondary_color"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:text="Davomat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

       <LinearLayout

           app:layout_constraintTop_toBottomOf="@id/davomat"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintVertical_bias="0.2"
           android:orientation="horizontal"
           android:layout_width="@dimen/_300sdp"
           android:layout_height="@dimen/_60sdp">

           <LinearLayout

               android:layout_weight="1"
               android:background="@drawable/back_style"
               android:orientation="vertical"
               android:backgroundTint="#C7ED56"
               android:layout_margin="@dimen/_1sdp"
               android:layout_width="match_parent"
               android:layout_height="match_parent">


               <TextView


                   android:textSize="@dimen/_12sdp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/montserrat"
                   android:text="Qoldirgan"
                   android:layout_gravity="center_horizontal"
                   android:layout_margin="@dimen/_2sdp"
                   android:gravity="center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView


                   android:textSize="@dimen/_16sdp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/montserrat"
                   android:text="2"
                   android:layout_margin="@dimen/_3sdp"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </LinearLayout>

           <LinearLayout

               android:layout_weight="1"
               android:layout_margin="@dimen/_1sdp"
               android:background="@drawable/back_style"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">


               <TextView


                   android:textSize="@dimen/_12sdp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/montserrat"
                   android:text="Qatnashgan"
                   android:layout_gravity="center_horizontal"
                   android:layout_margin="@dimen/_2sdp"
                   android:gravity="center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView


                   android:textSize="@dimen/_16sdp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/montserrat"
                   android:text="30"
                   android:layout_margin="@dimen/_3sdp"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>


           </LinearLayout>

           <LinearLayout

               android:layout_weight="1"
               android:background="@drawable/back_style"
               android:orientation="vertical"
               android:backgroundTint="#989898"
               android:layout_margin="@dimen/_1sdp"
               android:layout_width="match_parent"
               android:layout_height="match_parent">


               <TextView


                   android:textSize="@dimen/_12sdp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/montserrat"
                   android:text="Jami"
                   android:layout_gravity="center_horizontal"
                   android:layout_margin="@dimen/_2sdp"
                   android:gravity="center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView


                   android:textSize="@dimen/_16sdp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/montserrat"
                   android:text="50"
                   android:layout_margin="@dimen/_3sdp"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>


           </LinearLayout>

       </LinearLayout>

        <ImageView
            android:id="@+id/line"
            android:src="@drawable/ic_path_2_2"
            android:scaleType="centerCrop"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <at.markushi.ui.CircleButton
            android:id="@+id/main_btn"
            android:transitionName="cardView"
            app:cb_pressedRingWidth="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="@dimen/_2sdp"
            app:cb_color="#01D8D0"
            android:src="@drawable/ic_up_img"
            app:layout_constraintHorizontal_bias="0.52"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
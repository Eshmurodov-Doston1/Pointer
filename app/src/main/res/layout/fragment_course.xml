<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F7FC"
    android:transitionName="card"
    tools:context=".fragments.student.CourseFragment">
    <at.markushi.ui.CircleButton
        android:id="@+id/close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_group_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintHorizontal_bias="0.03"
        app:cb_color="@color/white"
        app:cb_pressedRingWidth="@dimen/_5sdp"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"/>
    <TextView
        app:layout_constraintTop_toTopOf="@id/close"
        app:layout_constraintBottom_toBottomOf="@id/close"
        app:layout_constraintLeft_toRightOf="@id/close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHorizontal_bias="0.2"
        android:layout_width="0dp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:text="@string/app_name"
        android:textSize="@dimen/_16sdp"
        android:maxLines="2"
        android:layout_height="wrap_content"/>


    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player"
        app:layout_constraintTop_toBottomOf="@id/close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintVertical_bias="0.03"
        app:videoId="JJLvj1AnGkU"
        app:autoPlay="false"
        app:useWebUi="true"
        android:focusedByDefault="false"
        app:showYouTubeButton="true"
        android:elevation="@dimen/_3sdp"
        android:layout_width="match_parent"
        app:enableLiveVideoUi="false"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
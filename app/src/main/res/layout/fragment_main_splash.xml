<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.splashFragments.MainSplashFragment">
    <ImageView
        android:id="@+id/image_pointer"
        android:src="@drawable/pointer"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
      android:id="@+id/text_pointer"
      android:src="@drawable/ic_group"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintVertical_bias="0.18"
        app:layout_constraintWidth_percent="0.75"
        android:scaleType="centerCrop"
        android:padding="@dimen/_15sdp"
      android:layout_width="0dp"
      android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text"
        app:layout_constraintTop_toBottomOf="@id/text_pointer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintVertical_bias="0.02"
        android:text="@string/assalomu_alaykum_pointerga_hush_kelibsiz"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/text_pointer1"
        android:src="@drawable/ic_group"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintWidth_percent="0.75"
        android:scaleType="centerCrop"
        android:padding="@dimen/_15sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7FC"
    android:transitionName="view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.student.MyCourceFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:transitionName="cardView"
        android:background="#F7F7FC"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/name_page"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.03"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintRight_toRightOf="parent"
            android:maxLines="1"
            android:textSize="@dimen/_19sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Mening kurslarim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.viewpager2.widget.ViewPager2
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/name_page"
            android:id="@+id/cource_viewPager"
            app:layout_constraintVertical_bias="0.05"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintBottom_toTopOf="@id/line"
            android:layout_height="0dp"/>
        <ImageView
            android:id="@+id/line"
            android:src="@drawable/ic_path_2_2"
            android:scaleType="centerCrop"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <at.markushi.ui.CircleButton
            android:id="@+id/main_btn"
            android:transitionName="cardView"
            app:cb_pressedRingWidth="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingBottom="@dimen/_2sdp"
            app:cb_color="#01D8D0"
            android:src="@drawable/ic_vector_3"
            app:layout_constraintHorizontal_bias="0.52"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
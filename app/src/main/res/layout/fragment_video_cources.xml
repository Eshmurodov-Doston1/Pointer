<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F7F7FC"
    android:transitionName="My_cardView"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.videoCources.VideoCourcesFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintVertical_bias="0.03"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_student"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="centerCrop"
            app:layout_constraintWidth_percent="0.15"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            android:src="@drawable/news_image3"
            app:layout_constraintHorizontal_bias="0.05"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/name"
            android:maxLines="2"
            app:layout_constraintRight_toLeftOf="@id/notification"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHorizontal_bias="0.4"
            android:text="Dostonbek Eshmurodov"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            app:layout_constraintTop_toTopOf="@id/image_student"
            app:layout_constraintBottom_toBottomOf="@id/image_student"
            app:layout_constraintLeft_toRightOf="@id/image_student"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/notification"
            app:layout_constraintTop_toTopOf="@id/image_student"
            app:layout_constraintBottom_toBottomOf="@id/image_student"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.97"
            android:src="@drawable/ic_notifications"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/cons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintVertical_bias="0.05"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:text="Video kurslar"
        android:maxLines="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
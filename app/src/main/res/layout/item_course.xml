<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:background="#F4F5F9"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="@dimen/_71sdp"
        android:background="@color/white"
        android:layout_width="@dimen/_2sdp"
        android:layout_height="match_parent"/>

    <TextView

        android:id="@+id/start_lesson"
        app:layout_constraintTop_toTopOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/card"
        android:textSize="@dimen/_12sdp"
        android:textColor="#212525"
        android:fontFamily="@font/montserrat"
        android:text="11:00"
        app:layout_constraintVertical_bias="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView

        android:id="@+id/end_lesson"
        app:layout_constraintTop_toBottomOf="@id/start_lesson"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/card"
        android:textSize="@dimen/_12sdp"
        android:textColor="#BCC1CD"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="13:00"
        app:layout_constraintVertical_bias="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView

        android:id="@+id/card"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/_89sdp"
        android:layout_width="@dimen/_200sdp"
        app:cardCornerRadius="@dimen/_16sdp"
        android:layout_height="@dimen/_120sdp">

        <androidx.constraintlayout.widget.ConstraintLayout

           android:background="@color/white"
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView

                android:id="@+id/course"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:text="Java"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView

                android:id="@+id/point"
                app:layout_constraintTop_toTopOf="@id/course"
                app:layout_constraintBottom_toBottomOf="@id/course"
                app:layout_constraintLeft_toLeftOf="@id/course"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintVertical_bias="0.2"
                android:src="@drawable/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ImageView

                android:id="@+id/point1"
                app:layout_constraintTop_toTopOf="@id/course"
                app:layout_constraintBottom_toBottomOf="@id/course"
                app:layout_constraintLeft_toLeftOf="@id/course"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintVertical_bias="0.5"
                android:src="@drawable/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView

                android:id="@+id/group"
                app:layout_constraintTop_toBottomOf="@id/course"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:text="Android G-20"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView

                android:id="@+id/image"
                app:layout_constraintTop_toBottomOf="@id/group"
                app:layout_constraintLeft_toLeftOf="@id/group"
                app:layout_constraintRight_toRightOf="@id/group"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintHorizontal_bias="0"
                android:src="@drawable/ic_location_point_1"
                app:layout_constraintVertical_bias="0"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView

                android:id="@+id/room_number"
                app:layout_constraintTop_toTopOf="@id/image"
                app:layout_constraintBottom_toBottomOf="@id/image"
                app:layout_constraintLeft_toRightOf="@id/image"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:text="6-205 hona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/image_student"
                app:layout_constraintTop_toBottomOf="@id/image"
                app:layout_constraintLeft_toLeftOf="@id/group"
                app:layout_constraintRight_toRightOf="@id/group"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintHorizontal_bias="0"
                android:src="@drawable/news_image2"
                app:layout_constraintVertical_bias="0"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"/>

            <TextView

                android:id="@+id/student_name"
                app:layout_constraintTop_toTopOf="@id/image_student"
                app:layout_constraintBottom_toBottomOf="@id/image_student"
                app:layout_constraintLeft_toRightOf="@id/image_student"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:text="Qosimov Shahrizod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>